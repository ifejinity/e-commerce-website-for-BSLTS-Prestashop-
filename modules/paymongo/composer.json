{
    "type": "prestashop-module",
    "name": "prestashop/paymongo",
    "description": "PayMongo Prestashop Payments Module",
    "homepage": "https://github.com/PrestaShop/paymongo",
    "license": "AFL-3.0",
    "authors": [
        {
            "name": "PayMongo Philippines",
            "email": "brennan@paymongo.com"
        }
    ],
    "config": {
        "platform": {
            "php": "5.6.0"
        },
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "sort-packages": true,
        "prepend-autoloader": false
    },
    "autoload": {
        "classmap": [
            "controllers",
            "paymongo.php"
        ]
    },
    "scripts": {
        "set-license-header": [
            "@php ./vendor/bin/header-stamp --license=\"assets/afl.txt\" --exclude=\".github,vendor\""
        ]
    },
    "require-dev": {
        "prestashop/php-dev-tools": "~3.0"
    },
    "author": "PrestaShop"
}